<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<androidx.cardview.widget.CardView
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tipsImage"
            android:transitionName="img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            tools:ignore="UnusedAttribute"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/img"
            android:layout_alignBottom="@id/tipsImage"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:background="@drawable/round_white"
            android:textColor="@android:color/black"
            android:singleLine="true"
            android:layout_marginEnd="80sp"
            android:gravity="bottom"
            android:layout_alignLeft="@+id/title"
            android:layout_alignStart="@+id/title"
            android:layout_alignRight="@+id/layoutDate"
            android:layout_alignTop="@+id/layoutDate"
            android:layout_alignEnd="@+id/layoutDate"
            android:text="@string/title_placeholder" />

        <FrameLayout
            android:id="@+id/layoutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-50dp">

<!--            <ImageView
                android:id="@+id/date"
                android:src="@drawable/ic_date"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"/>-->
<!--            <TextView
                android:textColor="#606060"
                android:id="@+id/publishedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="10dp"
                android:text="01 Desember 2019" />-->
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="@color/colorTextTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/img"
            android:text="@string/news_placeholder" />

        <TextView
            android:id="@+id/subTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:text="@string/tips_info_placeholder" />

        <Button
            android:id="@+id/btnShare"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitle"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Share"
            android:layout_toEndOf="@+id/btnVisit"
            android:layout_toRightOf="@+id/btnVisit"/>

        <Button
            android:id="@+id/btnVisit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/subTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:text="Detail" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
    </LinearLayout>